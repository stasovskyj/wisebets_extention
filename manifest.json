{
  "author": "Віталій Стасовський",
  "manifest_version": 3,
  "name": "Arbitrage ToolBox",
  "description": "Моніторинг геолокації, запис ip адрес в базу, перевірка з іншими ip адресами, вбудований в сторінку калькулятор вилок",
  "short_name": "Arbitrage ToolBox",
  "version": "0.6.0",
  "action": {
    "default_title": "Arbitrage ToolBox",
    "default_popup": "ui/main.html",
    "default_icon": "/images/icon.png"
  },
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png"
  },
  "options_ui": {
    "open_in_tab": true,
    "page": "ui/options.html"
  },
  "default_locale": "uk",
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "*://*.pokerstars.com/sports/*",
        "*://*.pokerstars-01.com/sports/*",
        "*://*.favbet.com/*",
        "*://*.favbet.ua/*",
        "*://*.betfair.com/*",
        "*://*.pin1111.com/*",
        "*://www.pinnacle.com/*",
        "*://*.22bet.com/*",
        "*://*.stake.ac/*",
        "*://*.stake.com/*",
        "*://*.cloudbet.com/*",
        "*://*.marathonbet.com/*",
        "*://*.betonline.ag/*",
        "*://sportsbet.io/*",
        "*://*.sportsbetting.ag/*",
        "*://*.goldenpalacesports.be/*",
        "*://*.betvictor.com/*"
      ],
      "js": [
        "js/constant.js",
        "js/base.js",
        "js/init.js",
        "js/ws.js",
        "js/calc-ui.js",
        "js/calc-pro.js",
        "js/tracker.js",
        "js/calc-helper.js",
        "js/parser.js"
      ],
      "css": ["css/content.css"]
    }
  ],
  "permissions": ["scripting", "storage", "activeTab", "tabs", "notifications"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "js/background.js"
  },
  "commands": {
    "parse_balance": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y",
        "linux": "Ctrl+Shift+Y"
      },
      "description": "Зберегти залишок коштів"
    },
    "parse_unsettled_bets": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U",
        "linux": "Ctrl+U"
      },
      "description": "Парсити нерозраховані ставки"
    }
  }
}
